# Test environment configuration
NODE_ENV=test
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# Test database (use separate test database)
MONGODB_URI=mongodb://localhost:27017/freshcart_test
REDIS_URL=redis://localhost:6379/1

# Test credentials (use dedicated test accounts)
GOOGLE_TEST_EMAIL=
GOOGLE_TEST_PASSWORD=

# Firebase test configuration
FIREBASE_PROJECT_ID=freshcart-test
FIREBASE_AUTH_DOMAIN=freshcart-test.firebaseapp.com

# Test file paths
TEST_IMAGES_PATH=./test-files/images
TEST_DOCUMENTS_PATH=./test-files/documents

# Playwright configuration
HEADLESS=true
SLOW_MO=0
TIMEOUT=30000

# Test reporting
GENERATE_REPORT=true
REPORT_PATH=./test-results

# Mock services
MOCK_PAYMENT_SERVICE=true
MOCK_SMS_SERVICE=true
MOCK_EMAIL_SERVICE=true

# Test flags
SKIP_EMAIL_VERIFICATION=true
SKIP_PHONE_VERIFICATION=true
ENABLE_TEST_ROUTES=true